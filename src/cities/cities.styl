.cities
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    background #cccccc94
    -webkit-overflow-scrolling touch
    header
        height 3rem
    .model
        background #fff
        position absolute
        top 10px
        bottom 10px
        left 10px
        right 10px
        display flex
        flex-direction column
        ul
            list-style none
            margin 0
            padding 0
            label
                display flex
                align-items center
                border-bottom #f0f0f0 solid 1px
                line-height 2.5rem
                justify-content center
                span
                    flex auto
            h3
                background #f0f0f0
                line-height 2
        input[type=radio]
            -webkit-appearance none
            appearance none
            border #888 solid 1px
            outline 0
            border-radius 50%
            height 22px
            width 22px
            position relative
            vertical-align middle
        input[type=radio]:checked
            &:before
                content ''
                background #000
                text-align center
                width 50%
                height 50%
                display inline-block
                border-radius 50%
                position absolute
                top 0
                bottom 0
                left 0
                right 0
                margin auto
        label
            display block
        button
            background #000
            color #fff
            border none
            display block
            outline none
        footer
            height 3rem
            background #fff
            button
                width 80%
                margin 0 auto
    .content
        overflow-y auto
